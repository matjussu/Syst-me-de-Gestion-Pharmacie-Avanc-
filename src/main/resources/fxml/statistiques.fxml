<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<ScrollPane xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.sgpa.controller.StatistiquesController"
            fitToWidth="true" fitToHeight="true" styleClass="statistiques-root" maxWidth="Infinity" maxHeight="Infinity">
    <VBox spacing="20">
        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>

        <!-- Filtres de periode -->
        <HBox spacing="20" alignment="CENTER_LEFT" styleClass="filters-bar">
            <Label text="Periode:" styleClass="filter-label"/>
            <ComboBox fx:id="comboPeriode" prefWidth="150"/>
            <Label text="Du:" styleClass="filter-label"/>
            <DatePicker fx:id="dateDebut"/>
            <Label text="Au:" styleClass="filter-label"/>
            <DatePicker fx:id="dateFin"/>
            <Button text="Actualiser" onAction="#handleRefresh" styleClass="action-button, primary">
                <graphic><FontIcon iconLiteral="fas-sync-alt"/></graphic>
            </Button>
            <Region HBox.hgrow="ALWAYS"/>
            <HBox styleClass="export-group">
                <Button text="PDF" onAction="#handleExportPDF" styleClass="export-pdf">
                    <graphic><FontIcon iconLiteral="fas-file-pdf"/></graphic>
                </Button>
                <Button text="Excel" onAction="#handleExportExcel" styleClass="export-excel">
                    <graphic><FontIcon iconLiteral="fas-file-excel"/></graphic>
                </Button>
            </HBox>
            <ProgressIndicator fx:id="progressIndicator" visible="false" prefWidth="25" prefHeight="25"/>
        </HBox>

        <!-- Resume chiffres cles avec tendances -->
        <HBox fx:id="summaryRow" spacing="15" styleClass="stats-summary">
            <VBox styleClass="summary-card" HBox.hgrow="ALWAYS" spacing="4">
                <Label text="Chiffre d'affaires" styleClass="summary-label"/>
                <Label fx:id="lblChiffreAffaires" text="0.00 EUR" styleClass="summary-value, primary"/>
                <Label fx:id="lblTrendCA" text="" styleClass="trend-label"/>
            </VBox>
            <VBox styleClass="summary-card" HBox.hgrow="ALWAYS" spacing="4">
                <Label text="Nombre de ventes" styleClass="summary-label"/>
                <Label fx:id="lblNombreVentes" text="0" styleClass="summary-value"/>
                <Label fx:id="lblTrendVentes" text="" styleClass="trend-label"/>
            </VBox>
            <VBox styleClass="summary-card" HBox.hgrow="ALWAYS" spacing="4">
                <Label text="Panier moyen" styleClass="summary-label"/>
                <Label fx:id="lblPanierMoyen" text="0.00 EUR" styleClass="summary-value"/>
                <Label fx:id="lblTrendPanier" text="" styleClass="trend-label"/>
            </VBox>
            <VBox styleClass="summary-card" HBox.hgrow="ALWAYS" spacing="4">
                <Label text="Articles vendus" styleClass="summary-label"/>
                <Label fx:id="lblArticlesVendus" text="0" styleClass="summary-value"/>
                <Label fx:id="lblTrendArticles" text="" styleClass="trend-label"/>
            </VBox>
        </HBox>

        <!-- Ligne 1 : Top 10 Medicaments (horizontal) + Alertes (badges) -->
        <HBox fx:id="topRow" spacing="20">
            <!-- Top medicaments vendus - BarChart horizontal -->
            <VBox styleClass="panel" HBox.hgrow="ALWAYS">
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <FontIcon iconLiteral="fas-chart-bar" iconSize="18" styleClass="section-icon"/>
                    <Label text="Top 10 Medicaments Vendus" styleClass="panel-title"/>
                </HBox>
                <BarChart fx:id="chartTopMedicaments" VBox.vgrow="ALWAYS" prefHeight="380"
                          legendVisible="false" animated="false">
                    <xAxis>
                        <NumberAxis label="Quantite" fx:id="xAxisTop"/>
                    </xAxis>
                    <yAxis>
                        <CategoryAxis fx:id="yAxisTop"/>
                    </yAxis>
                </BarChart>
            </VBox>

            <!-- Alertes actives - Badges -->
            <VBox styleClass="panel" prefWidth="320" spacing="15">
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <FontIcon iconLiteral="fas-exclamation-circle" iconSize="18" style="-fx-icon-color: #dc2626; -fx-icon-size: 18;"/>
                    <Label text="Alertes Actives" styleClass="panel-title"/>
                </HBox>

                <HBox fx:id="badgeStockBas" styleClass="stat-badge, warning" spacing="12" alignment="CENTER_LEFT"
                      prefHeight="60">
                    <FontIcon iconLiteral="fas-box-open" iconSize="20" styleClass="stat-icon-mini"/>
                    <VBox spacing="2" HBox.hgrow="ALWAYS">
                        <Label text="Stock bas" style="-fx-font-size: 12px; -fx-text-fill: #64748b; -fx-font-weight: normal;"/>
                        <Label fx:id="lblAlertesStockBas" text="0" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
                    </VBox>
                </HBox>

                <HBox fx:id="badgePeremption" styleClass="stat-badge, critical" spacing="12" alignment="CENTER_LEFT"
                      prefHeight="60">
                    <FontIcon iconLiteral="fas-clock" iconSize="20" styleClass="stat-icon-mini"/>
                    <VBox spacing="2" HBox.hgrow="ALWAYS">
                        <Label text="Peremption proche" style="-fx-font-size: 12px; -fx-text-fill: #64748b; -fx-font-weight: normal;"/>
                        <Label fx:id="lblAlertesPeremption" text="0" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
                    </VBox>
                </HBox>

                <HBox fx:id="badgePerimes" styleClass="stat-badge, danger" spacing="12" alignment="CENTER_LEFT"
                      prefHeight="60">
                    <FontIcon iconLiteral="fas-skull-crossbones" iconSize="20" styleClass="stat-icon-mini"/>
                    <VBox spacing="2" HBox.hgrow="ALWAYS">
                        <Label text="Lots perimes" style="-fx-font-size: 12px; -fx-text-fill: #64748b; -fx-font-weight: normal;"/>
                        <Label fx:id="lblAlertesPerimes" text="0" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
                    </VBox>
                </HBox>

                <Label fx:id="lblNoAlertes" text="&#x2714; Aucune alerte active"
                       style="-fx-text-fill: #16a34a; -fx-font-size: 14px; -fx-font-weight: bold;"
                       visible="false" managed="false" alignment="CENTER" maxWidth="Infinity"/>

                <Region VBox.vgrow="ALWAYS"/>
            </VBox>
        </HBox>

        <!-- Ligne 2 : Top 10 Medicaments par Chiffre d'Affaires (horizontal) -->
        <VBox fx:id="caPanel" styleClass="panel">
            <HBox alignment="CENTER_LEFT" spacing="10">
                <FontIcon iconLiteral="fas-euro-sign" iconSize="18" styleClass="section-icon"/>
                <Label text="Top 10 Medicaments par Chiffre d'Affaires" styleClass="panel-title"/>
            </HBox>
            <BarChart fx:id="chartTopCA" VBox.vgrow="ALWAYS" prefHeight="500" legendVisible="false" animated="false" categoryGap="8" barGap="2">
                <xAxis>
                    <NumberAxis label="Montant (EUR)" fx:id="xAxisCA"/>
                </xAxis>
                <yAxis>
                    <CategoryAxis fx:id="yAxisCA"/>
                </yAxis>
            </BarChart>
        </VBox>

        <!-- Ligne 3 : Evolution des Ventes -->
        <VBox fx:id="ventesPanel" styleClass="panel">
            <HBox alignment="CENTER_LEFT" spacing="10">
                <FontIcon iconLiteral="fas-chart-line" iconSize="18" styleClass="section-icon"/>
                <Label text="Evolution des Ventes" styleClass="panel-title"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Label fx:id="lblChartVentesInfo" text="" style="-fx-text-fill: #94a3b8; -fx-font-size: 11px;"/>
            </HBox>
            <LineChart fx:id="chartVentes" VBox.vgrow="ALWAYS" prefHeight="300"
                       legendVisible="false" animated="false">
                <xAxis>
                    <CategoryAxis label="Date" fx:id="xAxisVentes"/>
                </xAxis>
                <yAxis>
                    <NumberAxis label="Montant (EUR)" fx:id="yAxisVentes"/>
                </yAxis>
            </LineChart>
        </VBox>

    </VBox>
</ScrollPane>
